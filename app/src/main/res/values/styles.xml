<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textViewStyle">@style/defaultTextView</item>
        <item name="android:listViewStyle">@style/defaultListView</item>
        <item name="android:buttonBarStyle">@style/defaultButtonBar</item>
        <item name="android:buttonBarButtonStyle">@style/defaultButtonBarButton</item>
    </style>

    <style name="defaultListView">
        <item name="android:divider">@null</item>
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <style name="defaultTextView">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="defaultButtonBar">
        <item name="android:background">#e3e3e3</item>
    </style>

    <style name="defaultButtonBarButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">#3e3e3e</item>
    </style>

    <style name="Picture">
        <item name="android:layout_width">@dimen/profile_picture_size</item>
        <item name="android:layout_height">@dimen/profile_picture_size</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="ProfileText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="ProfileText.Edit">
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

</resources>